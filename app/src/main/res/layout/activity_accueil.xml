<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context=".Accueil">

    <Button
        android:id="@+id/btn_jouer"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="490dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="490dp"
        android:layout_marginBottom="15dp"
        android:text="@string/btn_jouer"
        android:background="@drawable/bouton_arrondie"
        app:layout_constraintBottom_toTopOf="@+id/btn_regles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_regles"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="490dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="490dp"
        android:layout_marginBottom="15dp"
        android:text="@string/btn_regles"
        android:background="@drawable/bouton_arrondie"
        app:layout_constraintBottom_toTopOf="@+id/btn_quitter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_jouer" />

    <Button
        android:id="@+id/btn_quitter"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="490dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="490dp"
        android:layout_marginBottom="50dp"
        android:text="@string/btn_quitter"
        android:background="@drawable/bouton_arrondie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_regles" />
</android.support.constraint.ConstraintLayout>